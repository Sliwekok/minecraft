{% extends('layouts/app.html.twig') %}

{% block content %}

    <div class="col-12 userManagement userPanel">
        <div class="col-6 servers">
            <div class="col-12 text-center">
                <p class="title">Your server</p>
                <div class="col-12">
                    {% if user.server is empty %}
                        ...is not existing. Yet! You can start <a class="special" href="{{ url('server_create_new') }}">here</a>
                    {% else %}
                        {{ user.server.name }}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-6 user text-center">
            <p class="title">Account data</p>
            <p>Username: {{ user.username }}</p>
            <p>Email: {{ user.email }}</p>
            <div class="col-12 d-inline-flex justify-content-center mt-5">
                <div class="col-4">
                    <button id="userDeleteAccount"
                            class="btn btn-outline-danger"
                            data-message="Are you sure you want to delete account? You'll lose server progress, backups and access to mod packages for ever."
                            data-url="{{ url('user_delete_account') }}"
                            data-confirmation="true">
                        Delete Account
                    </button>
                </div>
                <div class="col-4"><a href="{{ url('app_logout') }}"><button class="btn btn-outline-danger">Logout</button></a></div>
            </div>
        </div>
    </div>

{% endblock %}
